extends layout

block content
    <div class="container" id="flyout-example">
      <p class="close-sign-btn">+</p>
      <div class="forms-container">
          <div class="signin-signup">
              <form action="" class="sign-in-form">
                  <h2 class="title">Sign in</h2>
                  <div class="input-field">
                      <i class="fas fa-user"></i>
                      <input type="text" placeholder="Username" class="Username SIU-tf" onchange onpropertychange onkeyuponpaste oninput="SIUInpute()">
                  </div>
                  <div class="input-field">
                      <i class="fas fa-lock"></i>
                      <input type="password" placeholder="Password" class="Password SIU-tf" onchange onpropertychange onkeyuponpaste oninput="SIUInpute()">
                  </div>
                  <p class="we-up">Username or Password is incorrect</p>
                  <button type="button" class="btn solid" id="Login">Login</button>
              </form>
  
              <form action="" class="sign-up-form">
                  <h2 class="title">Sign up</h2>
                  <div class="input-field">
                      <i class="fas fa-user"></i>
                      <input type="text" placeholder="Username" class="UsernameS SIU-tf" onchange onpropertychange onkeyuponpaste oninput="SIUInpute()">
                  </div>
                  <div class="input-field">
                      <i class="fas fa-envelope"></i>
                      <input type="text" placeholder="Email" class="Email SIU-tf" onchange onpropertychange onkeyuponpaste oninput="SIUInpute()">
                  </div>
                  <div class="input-field">
                      <i class="fas fa-lock"></i>
                      <input type="password" placeholder="Password" class="PasswordS SIU-tf" onchange onpropertychange onkeyuponpaste oninput="SIUInpute()">
                  </div>
                  <p class="we-up">Username or Password incorrect</p>
                  <button type="button" class="btn solid" id="sign-up">Sign Up</button>
              </form>
          </div>
      </div>
  
      <div class="panels-container">
          <div class="panel left-panel">
              <div class="content">
                  <h3>New Here ?</h3>
                  <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit.</p>
                  <button class="btn transparent" id="sign-up-btn">Sign up</button>
              </div>
  
              <img src="./images/log.svg" class="image" alt="">
          </div>
  
          <div class="panel right-panel">
              <div class="content">
                  <h3>One of us ?</h3>
                  <p>Lorem ipsum dolor sit, amet consectetur adipisicing elit.</p>
                  <button class="btn transparent" id="sign-in-btn">Sign in</button>
              </div>
  
              <img src="./images/register.svg" class="image" alt="">
          </div>
      </div>
    </div>
    <script src="/javascripts/sign.js"></script>